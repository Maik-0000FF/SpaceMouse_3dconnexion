[Unit]
Description=SpaceMouse Desktop Navigation Daemon
Documentation=https://github.com/FreeSpacenav/spacenavd
After=graphical-session.target
PartOf=graphical-session.target

[Service]
Type=simple
ExecStart=%h/.local/bin/spacemouse-desktop -f -c %h/.config/spacemouse/config.json
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure
RestartSec=3
Environment=DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/%U/bus

[Install]
WantedBy=graphical-session.target
